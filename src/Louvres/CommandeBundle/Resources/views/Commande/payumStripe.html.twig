{% extends layout ?: "@PayumCore/layout.html.twig" %}

{% block payum_body %}
    {{ parent() }}

    <form action="{{ actionUrl|default('') }}" method="POST">
        <script
                src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                data-key="{{ publishable_key }}"
                data-image="{{asset('bundles/louvrescommande/images/logo_louvre.png')}}"
                data-name="{{ model.name|default("") }}"
                data-description="Louvre - Billetterie"
                data-locale="auto"
                data-amount="{{ model.amount }}"
                data-currency="{{ model.currency|default("EUR") }}">
        </script>
    </form>
{% endblock %}

{% block payum_javascripts %}
    {{ parent() }}


    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

    <script type="text/javascript">
        $('form .stripe-button-el').hide();
        $('form .stripe-button-el').click();
    </script>

{% endblock %}
