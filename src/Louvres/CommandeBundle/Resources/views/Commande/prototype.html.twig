<div class="form-horizontal row formulaire_a_copier">
    <fieldset>
        <legend>Billet</legend>
        <div class="row champs">
            <div class="form-group input_form col-xs-12 col-sm-3">
                {{ form_widget(form.nom, {'attr': {'class': 'form-control input-sm'}}) }}
                {{ form_errors(form.nom) }}
                <span class="error">Saisir au moins 2 caractères</span>
            </div>
            <div class="form-group input_form col-xs-12 col-sm-3">
                {{ form_widget(form.prenom, {'attr': {'class': 'form-control input-sm'}}) }}
                {{ form_errors(form.prenom) }}
                <span class="error">Saisir au moins 2 caractères</span>
            </div>
            <div class="form-group input_form col-xs-12 col-sm-3">
                {{ form_widget(form.dateNaissance, {'attr': {'class': 'form-control input-sm'}}) }}
                {{ form_errors(form.dateNaissance) }}
                <span class="help-block">Format attendu : JJ/MM/AAAA</span>
                <span class="error">Date invalide</span>
            </div>
            <div class="form-group input_form col-xs-12 col-sm-3">
                {{ form_widget(form.pays, {'attr': {'class': 'form-control input-sm'}} ) }}
                {{ form_errors(form.pays) }}
            </div>
        </div>
        <div class="row reduit">
            <label class="checkbox-inline">
                {{ form_widget(form.reduit) }}
                {{ form_label(form.reduit) }}
                {{ form_errors(form.reduit) }}
            </label>
        </div>
    </fieldset>
</div>